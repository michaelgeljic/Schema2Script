<?xml version="1.0" encoding="UTF-8"?>
<!--The level of internal Log4j events that should be logged to the console.-->
<Configuration>
    <Properties>
        <Property name="filename">target/logs/schema2script.log</Property>

    </Properties>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%-5p %c %m%n"/>
        </Console>
        <File name="FILE" fileName="${filename}">
            <!--
            %d{yyyy-MM-dd HH:mm:ss} = date and time format
            %t                      = thread name
            %-5p                    = logging priority, like DEBUG or ERROR, -5 ensures that the log level is left-aligned with padding spaces if it has fewer than 5 characters.
            %c{1}                   = loger name
            %L                      = line number of the logging request
            %m%n                    = message to log with line break
            %xThrowable{separator(|)} = have the stacktrace in a single line
            -->
            <PatternLayout>
                <Pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} %p %c:%L - %m%xThrowable{separator(|)}%n
                </Pattern>
            </PatternLayout>
        </File>

    </Appenders>

    <Loggers>
        <Logger name="main.java.model" level="debug">
            <AppenderRef ref="FILE"/>
        </Logger>


        <Root level="fatal">
            <AppenderRef ref="STDOUT"/>
        </Root>

    </Loggers>
</Configuration>

